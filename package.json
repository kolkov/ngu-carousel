    "copy:changelog": "cpx CHANGELOG.md dist/carousel",
    "copy:license": "cpx LICENSE dist/carousel",
    "test-ci": "ng test carousel --code-coverage --watch=false --browsers=ChromeHeadless && cat ./coverage/lcov.info | coveralls"
  },
  "private": true,
